@model WebApplication1.Core.ViewModels.ProfileViewModel

@{
    ViewBag.Title = "Profile";
}

<h2> @Model.ProfileUsername Profile </h2>

<table class="table" id="profile">
    <tr>
        <th>
            UserName
            <button class="btn btn-link js-follow @(Model.IsFollowing ? "following" : "follow")" followee-id="@Model.UserId">
                @(Model.IsFollowing ? "Following" : "Follow")
            </button>
        </th>
        <th>
            Content
        </th>
        <th>
            DateTime
        </th>
    </tr>
    @foreach (var tweet in Model.Tweets)
    {
        <tr>
            <td>
                @tweet.User.Username
            </td>
            <td>
                @tweet.Content
            </td>
            <td>
                @tweet.CreatedAt.ToString("g")
            </td>
        </tr>
    }
</table>
@section Scripts{
    <script>
        $(document).ready(function () {
            FollowingController.init("#profile");
        })
    </script>
}